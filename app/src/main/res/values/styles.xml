<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <declare-styleable name="CardViewCustom">
        <!-- Corner radius for Main. -->


        <attr format="dimension" name="mainMarginLeft"/>
        <attr format="dimension" name="mainMarginRight"/>
        <attr format="dimension" name="mainMarginTop"/>
        <attr format="dimension" name="mainMarginBottom"/>

        <attr format="dimension" name="mainCornerRadius"/>

        <attr format="dimension" name="mainRadiusTopLeft"/>
        <attr format="dimension" name="mainRadiusBottomLeft"/>
        <attr format="dimension" name="mainRadiusTopRight"/>
        <attr format="dimension" name="mainRadiusBottomRight"/>
        <attr format="boolean" name="randomBgColorCardView"/>


        <attr format="color" name="mainColor"/>

    </declare-styleable>

    <style name="CardViewCustom" parent="CardView">

    </style>


</resources>